# =============================================================================
# NOTIFICACIONES
# =============================================================================
# VAPID Keys para push notifications
VITE_VAPID_PUBLIC_KEY=tu_vapid_public_key
VAPID_PRIVATE_KEY=tu_vapid_private_key

# SendGrid para emails (opcional)
SENDGRID_API_KEY=SG.tu_sendgrid_api_key

# Twilio para SMS (opcional)
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Modo de desarrollo (true/false)
VITE_DEV_MODE=true

# URL base de la API
VITE_API_BASE_URL=http://localhost:5173/api

# Puerto del servidor de desarrollo
PORT=5173

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================
# URL base en producción
VITE_PRODUCTION_URL=https://reserva-mauve.vercel.app

# CDN para assets estáticos (opcional)
VITE_CDN_URL=https://cdn.tu-dominio.com

# =============================================================================
# ANALYTICS (OPCIONAL)
# =============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Hotjar para heatmaps
VITE_HOTJAR_ID=12345

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# URL directa de la base de datos (para scripts de migración)
DATABASE_URL=postgresql://user:password@host:port/database

# Pool de conexiones
DB_POOL_SIZE=10

# =============================================================================
# SEGURIDAD
# =============================================================================
# Dominio permitido para CORS
CORS_ORIGIN=http://localhost:5173,https://tu-dominio.com

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# =============================================================================
# STORAGE Y ARCHIVOS
# =============================================================================
# Bucket de Supabase para archivos
VITE_SUPABASE_STORAGE_BUCKET=avatars

# Tamaño máximo de archivo (en MB)
MAX_FILE_SIZE=5

# =============================================================================
# LOGGING
# =============================================================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Servicio de logging externo (opcional)
LOGTAIL_TOKEN=tu_logtail_token

# =============================================================================
# INSTRUCCIONES DE CONFIGURACIÓN
# =============================================================================

# 1. CONFIGURAR SUPABASE:
#    - Crea un proyecto en https://supabase.com
#    - Ejecuta el schema de database/supabase-schema-normalized.sql
#    - Copia las claves desde Settings > API

# 2. CONFIGURAR AUTENTICACIÓN:
#    - En Supabase: Authentication > Settings
#    - Configura las URLs de redirección
#    - Habilita los providers que necesites

# 3. CONFIGURAR PAGOS (OPCIONAL):
#    - Registra cuenta en Wompi: https://comercios.wompi.co
#    - O en PayU: https://www.payu.com.co
#    - Obtén las claves de API

# 4. CONFIGURAR NOTIFICACIONES (OPCIONAL):
#    - Para push: Genera VAPID keys en https://vapidkeys.com
#    - Para email: Cuenta en SendGrid
#    - Para SMS: Cuenta en Twilio

# 5. RENOMBRAR ARCHIVO:
#    - Copia este archivo como .env.local
#    - Nunca subas .env.local al repositorio
#    - Usa .env.example para compartir la estructura
