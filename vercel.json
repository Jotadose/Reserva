{
  "version": 2,
  "builds": [
    { "src": "api/*.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/availability", "dest": "/api/availability.ts" },
    { "src": "/api/bookings", "dest": "/api/bookings.ts" },
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
